<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/BrakeToggle"
        android:layout_marginTop="101dp"
        android:checked="false"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/LeftToggle"
        android:checked="false"
        android:layout_below="@+id/BrakeToggle"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brakes"
        android:id="@+id/RightToggle"
        android:checked="false"
        android:layout_below="@+id/LeftToggle"
        android:layout_toRightOf="@+id/editText2"
        android:layout_toEndOf="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/LeftToggle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Brake"
        android:editable="false"
        android:clickable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="Left"
        android:layout_alignBottom="@+id/LeftToggle"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:editable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:text="Right"
        android:layout_alignBottom="@+id/RightToggle"
        android:layout_toLeftOf="@+id/RightToggle"
        android:layout_toStartOf="@+id/RightToggle"
        android:editable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_new"
        android:id="@+id/connect_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtViewDeviceName"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/connect_button"
        android:layout_alignStart="@+id/connect_button" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Gyro For Turn Signals"
        android:id="@+id/switch1"
        android:checked="false"
        android:layout_below="@+id/RightToggle"
        android:layout_alignRight="@+id/RightToggle"
        android:layout_alignEnd="@+id/RightToggle" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Accelerometer For Brake"
        android:id="@+id/switch2"
        android:checked="false"
        android:layout_below="@+id/switch1"
        android:layout_alignRight="@+id/switch1"
        android:layout_alignEnd="@+id/switch1" />

</RelativeLayout>
